@model IEnumerable<Mobie_store.ViewService.post>
@{
    ViewBag.Title = "listPosts";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Dashboard.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-icon" data-background-color="purple">
                <i class="material-icons">assignment</i>
            </div>
            <div class="card-content">
                <h4 class="card-title">Product DataTables</h4>
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                </div>
                <div class="material-datatables">
                    <table id="postTable" class="table table-striped table-no-bordered table-hover datatables" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>
                                <th>Stt</th>
                                <th>Tên bài Post</th>
                                <th>Nội Dung</th>
                                <th class="disabled-sorting text-right">Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Tên bài Post</th>
                                <th>Nội Dung</th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @{var count = 0;};
                            @foreach (var post in Model)
                            {
                                <tr class="row_@post.id">
                                    <td>@(++count)</td>
                                    <td>@post.name</td>
                                    <td>@post.descripton</td>
                                    <td class="text-right">
                                        <a href="#" class="btn btn-simple btn-info btn-icon update_product" data-id="@post.id"><i class="material-icons">create</i></a>
                                        <a href="#" class="btn btn-simple btn-info btn-icon status_product" data-id="@post.id"><i class="material-icons">done</i></a>
                                        <a href="#" class="btn btn-simple btn-info btn-icon delete_product" data-id="@post.id"><i class="material-icons">clear</i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end content-->
        </div>
        <!--  end card  -->
    </div>
    <!-- end col-md-12 -->
</div>
