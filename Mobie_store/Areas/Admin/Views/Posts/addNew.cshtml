@using Mobie_store.ViewService
@{
    ViewBag.Title = "addNew";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Dashboard.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <form method="post" action="@Url.Action("addNew","posts")" class="form-horizontal">
            <div class="card-header card-header-text" data-background-color="rose">
                <h4 class="card-title">Form Add New Product Posts</h4>
            </div>
            <div class="card-content">
                <div class="row">
                    @Html.Raw(ViewBag.HtmlStr)
                </div>
                <div class="row">
                    <label class="col-sm-2 label-on-left">Product</label>
                        <div class="col-lg-4 col-md-6 col-sm-3">
                            <div class="dropdown col-sm-6">
                                <button href="#pablo" class="dropdown-toggle btn btn-primary btn-round btn-block" data-toggle="dropdown" aria-expanded="true">
                                    Danh sách sản phẩm
                                    <b class="caret"></b>
                                    <div class="ripple-container"></div>
                                </button>
                                <ul class="dropdown-menu">
                                    @foreach (var item in new ViewServiceClient().Get_post(0))
                                    {
                                        <li class="divider"></li>
                                        <li>
                                            <input type="checkbox" name="product_id" value="@item.id">
                                            <span class="checkbox-material"></span>@item.name
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                <div class="row">
                    <label class="col-sm-2 label-on-left">Posts Name</label>
                    <div class="col-sm-6">
                        <div class="form-group label-floating is-empty">
                            <label class="control-label"></label>
                            <input type="text" name="name" class="form-control" value="">
                            <span class="help-block">Input Your Username.</span>
                            <span class="material-input"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <label class="col-sm-2 label-on-left">Description</label>
                    <div class="col-sm-6">
                        <div class="form-group label-floating is-empty purple-border">
                            <label class="control-label"></label>
                            <textarea type="text" name="descripton" class="form-control" value="" rows="5"></textarea>
                            <span class="help-block">Input Your Product Posts Description.</span>
                            <span class="material-input"></span>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-fill btn-rose">Add New</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

