
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Layouts/_Account.cshtml";
}


<div class="tm-section tm-login-register-area bg-white tm-padding-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @Html.Raw(ViewBag.HtmlStr)
                </div>
                <form method="post" action="@Url.Action("Register","Customer")" class="tm-form tm-register-form" enctype="multipart/form-data">
                    <h4>Create an account</h4>
                    <div class="tm-form-inner">
                        <div class="tm-form-field">
                            <label for="register-username">Username</label>
                            <input type="text" id="register-username" name="username" required="required">
                        </div>
                        <div class="tm-form-field">
                            <label for="register-username">Fullname</label>
                            <input type="text" id="register-fullname" name="fullname" required="required">
                        </div>
                        <div class="tm-form-field">
                            <label for="register-email">Email address</label>
                            <input type="email" id="register-email" name="email" required="required">
                        </div>
                        <div class="tm-form-field">
                            <label for="register-password">Password</label>
                            <input type="password" id="register-password" name="pwd" required="required">
                        </div>
                        <div class="tm-form-field">
                            <label for="register-re_password">Re-Password</label>
                            <input type="password" id="register-password" name="re_pwd" required="required">
                        </div>
                        <div class="tm-form-field">
                            <div>
                                <input type="checkbox" id="register-pass-show" name="register-pass-show">
                                <label for="register-pass-show">Show Password</label>
                            </div>
                        </div>
                        <div class="tm-form-field">
                            <label for="register-address">Address</label>
                            <input type="text" id="register-address" name="address" required="required">
                        </div>
                        <div class="tm-form-field">
                            <label for="register-phone">Phone</label>
                            <input type="text" id="register-phone" name="phone" required="required">
                        </div>
                        <div>
                            <label for="register-image">
                                Image
                            </label>
                            <div class="col-sm-6">
                                <div class="col-md-3 col-sm-4">
                                    <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                        <div>
                                            <span class="btn btn-round btn-rose btn-file">
                                                <span class="fileinput-new">Add Photo</span>
                                                <span class="fileinput-exists">Change</span>
                                                <input type="file" name="file" required="required">
                                            </span>
                                            <br>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tm-form-field">
                            <button type="submit" class="tm-button">Register <b></b></button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

